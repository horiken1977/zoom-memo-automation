{
  "version": 2,
  "buildCommand": "echo 'No build required'",
  "outputDirectory": ".",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/public/index.html"
    },
    {
      "source": "/functional-design",
      "destination": "/public/functional-design.html"
    },
    {
      "source": "/environment-design",
      "destination": "/public/environment-design.html"
    },
    {
      "source": "/test-specification",
      "destination": "/public/test-specification.html"
    },
    {
      "source": "/test-specifications",
      "destination": "/public/test-specification.html"
    },
    {
      "source": "/operations-design",
      "destination": "/public/operations-design.html"
    },
    {
      "source": "/error-codes",
      "destination": "/public/error-codes.html"
    },
    {
      "source": "/claude.md",
      "destination": "/0.docs/claude.md"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 300
    }
  },
  "framework": null
}